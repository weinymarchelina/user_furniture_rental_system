generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  uID         String   @id @default(auto()) @map("_id") @db.ObjectId
  uName       String
  uPhone_Num  String   @unique
  uPassword   String
  created_at  DateTime? @default(now())
  updated_at  DateTime? @updatedAt

  @@map("User")
}

model product {
  pID         String   @id @default(auto()) @map("_id") @db.ObjectId
  gID         Int
  gType       String
  gPrice      Int
  gNum        Int
  gImage      String?
  created_at  DateTime? @default(now())
  updated_at  DateTime? @updatedAt

  @@map("goods")
}

model delivery {
  dID           String   @id @default(auto()) @map("_id") @db.ObjectId
  gID           Int
  uID           String
  d_startDate   DateTime @default(now())
  d_arriveDate  DateTime
  d_rentalTime  Int
  d_orderAmount Int
  d_destination String
  created_at  DateTime? @default(now())
  updated_at  DateTime? @updatedAt

  @@map("deliver_goods")
}

